{
  "name": "xeno-conquest",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"client,server\" -c \"cyan,yellow\" \"npm run dev --workspace @xeno/client\" \"npm run dev --workspace @xeno/server\"",
    "build": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "@types/node": "^20.10.0"
  },
  "overrides": {
    "pixi.js": "7.0.5",
    "@pixi/display": "7.0.5",
    "@pixi/math": "7.0.5",
    "@pixi/core": "7.0.5"
  }
}
